# Web app URL (frontend) used by Stripe redirect after payment
FRONTEND_URL=https://your-frontend-domain.com

# Express listening port (Railway will inject PORT automatically)
PORT=3000

# PostgreSQL
DATABASE_URL=postgresql://user:password@host:port/dbname
PGSSLMODE=require

# Stripe
STRIPE_SECRET_KEY=sk_live_...
# After creating the webhook endpoint, set this from Stripe dashboard
STRIPE_WEBHOOK_SECRET=whsec_...

# Email: Option A (Resend API via SMTP or API key not required here)
# Email: Option B (SMTP via Nodemailer) - fill these to use SMTP
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM="VoucherHub <no-reply@yourdomain.com>"
